{
  "name": "orange-miles",
  "private": true,
  "version": "0.0.4",
  "description": "",
  "main": "./dist/main.js",
  "scripts": {
    "build-main": "cross-env NODE_ENV=production webpack --config webpack.main.prod.config.js",
    "build-renderer": "cross-env NODE_ENV=production webpack --config webpack.renderer.prod.config.js",
    "build": "npm run build-main && npm run build-renderer",
    "start-renderer-dev": "webpack-dev-server --config webpack.renderer.dev.config.js",
    "start-main-dev": "webpack --config webpack.main.config.js && electron ./dist/main.js",
    "start-dev": "cross-env START_HOT=1 npm run start-renderer-dev",
    "prestart": "npm run build",
    "start": "electron .",
    "lint": "tslint '{src}/**/*.{ts,tsx}' --project ./tsconfig.json",
    "precommit": "lint-staged",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps"
  },
  "lint-staged": {
    "{src}/**/*.{js,ts,tsx,json,css,scss,md}": ["prettier --config ./.prettierrc --write", "git add"],
    "{src}/**/*.{js,ts,tsx}": ["tslint --project ./tsconfig.json --fix", "git add"]
  },
  "build": {
    "productName": "OrangeMiles",
    "appId": "org.your.orangemiles",
    "mac": {
      "category": "your.app.category.type"
    },
    "directories": {
      "output": "release"
    },
    "files": ["dist/", "node_modules/", "package.json"],
    "linux": {
      "target": "deb"
    },
    "win": {
      "target": "nsis"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:Robinfr/electron-react-typescript.git"
  },
  "author": {
    "name": "ColeGreg",
    "email": "cole+greg@vapegod.net"
  },
  "license": "SEE LICENSE",
  "bugs": {
    "url": "https://github.com/Robinfr/electron-react-typescript/issues"
  },
  "homepage": "https://github.com/Robinfr/electron-react-typescript",
  "devDependencies": {
    "@types/electron-devtools-installer": "^2.0.2",
    "@types/keytar": "^4.0.1",
    "@types/react": "^16.0.31",
    "@types/react-dom": "^16.0.3",
    "@types/react-hot-loader": "^3.0.5",
    "@types/react-redux": "^6.0.6",
    "@types/webpack-env": "^1.13.3",
    "awesome-typescript-loader": "^3.4.1",
    "cross-env": "^5.1.3",
    "css-loader": "^0.28.7",
    "electron": "^11.5.0",
    "electron-builder": "^20.28.2",
    "electron-devtools-installer": "^2.2.4",
    "file-loader": "^1.1.6",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "image-webpack-loader": "^3.4.2",
    "lint-staged": "^6.0.0",
    "node-sass": "^4.11.0",
    "prettier": "^1.9.2",
    "react-hot-loader": "^3.1.3",
    "redux-devtools-extension": "^2.13.5",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "spectron": "^3.8.0",
    "style-loader": "^0.19.1",
    "tslint": "^5.11.0",
    "tslint-config-airbnb": "^5.4.2",
    "tslint-config-prettier": "^1.6.0",
    "tslint-react": "^3.2.0",
    "typescript": "^3.0.1",
    "uglifyjs-webpack-plugin": "^1.1.4",
    "webpack": "^3.10.0",
    "webpack-dev-server": "^2.11.3",
    "webpack-merge": "^4.1.1"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "keytar": "^4.3.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-redux": "^5.0.7",
    "redux": "^4.0.0"
  }
}
